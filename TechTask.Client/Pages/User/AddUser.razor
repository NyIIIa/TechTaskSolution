@page "/user/createuser"
<h3>Create user</h3>

<form>
    <div class="row">
        <div class="col-md-8">
        <div class="form-group">
            <label for="Name" class="control-label"> Name</label>
                <input for="Name" class="form-control"  @bind="@AddUserRequest.Name" />
        </div>
            <div class="form-group">
                <label for="EmailAddress" class="control-label">Email address</label>
                <input for="EmailAddress" class="form-control" @bind="@AddUserRequest.EmailAddress" />
            </div>
             <div class="form-group">
                <label for="PhoneNumber" class="control-label">Phone number</label>
                <input for="PhoneNumber" class="form-control" @bind="@AddUserRequest.PhoneNumber" />
            </div>
        </div>
    </div>
     <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@CreateEmployee" value="Save"/>
                <input type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel"/>
            </div>
        </div>
    </div>
</form>
